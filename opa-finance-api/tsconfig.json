{
  "$schema": "https://www.schemastore.org/tsconfig",
  "_version": "24.0.0",

  "compilerOptions": {
    "lib": ["es2023", "esnext.array", "esnext.collection", "esnext.promise"],
    "module": "nodenext",
    "target": "esnext",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node16",

    "ignoreDeprecations": "5.0",

    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src", "src/@types", "test"],
  "exclude": ["node_modules", "dist"]
}
