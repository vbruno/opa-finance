{
  "$schema": "https://www.schemastore.org/tsconfig",
  "_version": "24.0.0",

  "compilerOptions": {
    "lib": ["ES2023", "ESNext.Array", "ESNext.Collection", "ESNext.Promise"],
    "module": "nodenext",
    "target": "esnext",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node16",
    "outDir": "dist",

    "ignoreDeprecations": "5.0",

  },
  "include": ["src", "src/@types"],
  "exclude": ["node_modules", "dist"]
}
